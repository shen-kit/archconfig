# Start-up
command = "$HOME/.config/ghostty/tmux-start"

# Font
font-family = FiraCode
font-family-italic = Monaspace Radon
font-family-bold-italic = Monaspace Radon
font-size = 11

font-feature = calt
font-feature = liga
font-feature = ss01
font-feature = ss02
font-feature = ss03
font-feature = ss09

# Appearance
theme = catppuccin-mocha
cursor-style = bar

window-padding-x = 0
window-padding-y = 0
window-decoration = none

# Custom keybinds only
keybind = clear
keybind = ctrl+shift+,=reload_config

keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = copy=copy_to_clipboard
keybind = paste=paste_from_clipboard

keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+-=decrease_font_size:1
keybind = ctrl+0=reset_font_size
